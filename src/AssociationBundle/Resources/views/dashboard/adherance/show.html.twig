{% extends 'baseback.html.twig' %}
{% block title %}Adherance {% endblock %}
{% block info %}Adhérance numéro {{ adherance.id }} :{% endblock %}
{% block bread %}<a href="{{ path('dashboard_manager_adherance_index') }}">Adhérances</a> / {{ adherance.user.username }} {% endblock %}
{% block body %}
    <h1>Adherance</h1>

    <table>
        <tbody>
            <tr>
                <th>Joinedat</th>
                <td>{% if adherance.joinedAt %}{{ adherance.joinedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Access</th>
                <td>{{ adherance.fonction }}</td>
            </tr>
            <tr>
                <th>Access</th>
                <td>{{ adherance.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('dashboard_manager_adherance_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('dashboard_manager_adherance_edit', { 'id': adherance.id }) }}">Edit</a>
        </li>

    </ul>
{% endblock %}
