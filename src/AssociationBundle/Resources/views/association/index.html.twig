{% extends '@Backoffice/back/baseback.html.twig' %}
{% block title %}
    Association
{% endblock %}
{% block bread %}
Association
{% endblock %}
{% block body %}
    <!-- *************************************************************** -->
    <!-- End Location and Earnings Charts Section -->
    <!-- *************************************************************** -->
    <!-- *************************************************************** -->
    <!-- Start Top Leader Table -->
    <!-- *************************************************************** -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-4">
                        <h4 class="card-title">Les associations :</h4>
                        <div class="ml-auto">
                            <div class="dropdown sub-dropdown">
                                <button class="btn btn-link text-muted dropdown-toggle" type="button"
                                        id="dd1" data-toggle="dropdown" aria-haspopup="true"
                                        aria-expanded="false">
                                    <i data-feather="more-vertical"></i>
                                </button>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dd1">
                                    <a class="dropdown-item" href="{{ path('association_new') }}">Insert</a>
                                    <a class="dropdown-item" href="#">Update</a>
                                    <a class="dropdown-item" href="#">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table no-wrap v-middle mb-0">
                            <thead>
                            <tr class="border-0">
                                <th class="border-0 font-14 font-weight-medium text-muted">Nom de l'association
                                </th>
                                <th class="border-0 font-14 font-weight-medium text-muted px-2">Manager
                                </th>
                                <th class="border-0 font-14 font-weight-medium text-muted">Team</th>
                                <th class="border-0 font-14 font-weight-medium text-muted text-center">
                                    Status
                                </th>
                                <th class="border-0 font-14 font-weight-medium text-muted text-center">
                                    Weeks
                                </th>
                                <th class="border-0 font-14 font-weight-medium text-muted">Budget</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for association in associations %}
                                <tr>
                                    <td class="border-top-0 px-2 py-4">
                                        <div class="d-flex no-block align-items-center">
                                            <div class="mr-3">
                                                <img
                                                        src="{{ asset('client/images/association/images/'~association.photoAssociation) }}"
                                                        alt="user" class="rounded-circle" width="45"
                                                        height="45" /></div>
                                            <div class="">
                                                <h5 class="text-dark mb-0 font-16 font-weight-medium"><a href="{{ path('association_show', { 'id': association.idAssociation }) }}">{{ association.nomAssociation }}</a></h5>
                                                <span class="text-muted font-14">{{ association.domaine }}
                                                </span>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="border-top-0 text-muted px-2 py-4 font-14">{{ association.manager }}</td>
                                    <td class="border-top-0 px-2 py-4">
                                        <div class="popover-icon">
                                            {% if associations.members is defined %}
                                            {% for member in associations.members %}
                                            <a class="btn btn-primary rounded-circle btn-circle font-12"
                                               href="javascript:void(0)">{{  member.nom }}</a>
                                            {% endfor %}
                                            {% endif %}
                                            <a class="btn btn-success text-white rounded-circle btn-circle font-20"
                                               href="javascript:void(0)">+</a>
                                        </div>
                                    </td>
                                    {% if is_granted('ROLE_SUPER_ADMIN') == true %}
                                    {% if association.status ==1 %}
                                    <td class="border-top-0 text-center px-2 py-4"><i
                                                class="fa fa-circle text-primary font-12" data-toggle="tooltip"
                                                data-placement="top" title="Vérifié"></i></td>
                                    {% else %}

                                        <td class="border-top-0 text-center px-2 py-4"><i
                                                    class="fa fa-circle text-primary font-12" data-toggle="tooltip"
                                                    data-placement="top" title="Pas encore vérifié"></i></td>
                                        {% endif %}

                                    <td
                                            class="border-top-0 text-center font-weight-medium text-muted px-2 py-4">
                                        35
                                    </td>
                                    <td class="font-weight-medium text-dark border-top-0 px-2 py-4"><a href="{{ path('association_edit', { 'id': association.idAssociation }) }}">edit</a>
                                    {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- *************************************************************** -->
    <!-- End Top Leader Table -->
    <!-- *************************************************************** -->
{% endblock %}
