{% extends 'base.html.twig' %}
{% block title %}Association {{ association.nom }}{% endblock %}
{% block info %}Association {{ association.nom }} :{% endblock %}
{% block bread %}<a href="{{ path('association_index') }}">Association</a> / {{ association.nom }} {% endblock %}
{% block body %}

    <div class="properties-hero-area d-flex flex-wrap align-items-center mb-80">
        <div class="properties-slide">
            <!-- Properties Slider -->
            <div id="property-thumb-silde" class="carousel slide wow fadeInUp" data-wow-delay="200ms" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#property-thumb-silde" data-slide-to="0" class="active" style="background-image: url({{ asset('uploads/association/images/'~association.photo) }});"></li>
                    <li data-target="#property-thumb-silde" data-slide-to="1" style="background-image: url({{ asset('uploads/association/images/'~association.photo ) }});"></li>
                    <li data-target="#property-thumb-silde" data-slide-to="2" style="background-image: url{{ asset('uploads/association/images/'~association.photo) }});"></li>
                    <li data-target="#property-thumb-silde" data-slide-to="3" style="background-image: url({{ asset('uploads/association/images/'~association.photo) }});"></li>
                </ol>

                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="{{ asset('uploads/association/images/'~association.photo) }}" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="{{ asset('uploads/association/images/'~association.photo) }}" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="{{ asset('uploads/association/images/'~association.photo) }}" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="{{ asset('uploads/association/images/'~association.photo) }}" class="d-block w-100" alt="...">
                    </div>
                </div>
            </div>
        </div>

        <!-- Properties Content Area -->
        <div class="properties-content-area wow fadeInUp" data-wow-delay="200ms">
            <div class="properties-content-info">
                <h2>{{ association.nom }}</h2>
                <div class="properties-location">
                    <p><i class="fa fa-map-marker" aria-hidden="true"></i> {{ association.codePostal }} {{ association.rue }}, {{ association.ville }}, TN</p>
                    <p><i class="fa fa-map-marker" aria-hidden="true"></i> Horaire:{{ association.horaireTravail }}</p>
                </div>
                <h4 class="properties-rate">{{ association.memberships|length }} <span>/ Membres</span></h4>
                <p></p>
                <!-- Properties Info -->
                <div class="properties-info">
                    <p>Manager:<span><a href=""{{ path('fos_user_profile_show') }}>{{ association.manager.nom }} {{ association.manager.prenom }}</a></span></p>
                    <p>Numéro de téléphone: <span>{{ association.telephone }}</span></p>
                </div>
            </div>
        </div>
    </div>
    <!-- **** Properties Hero Area End **** -->

    <!-- **** Properties-area Start **** -->
    <div class="rehomes-properties-area">
        <div class="container">
            <div class="row justify-content-between">
                <div class="col-12 col-lg-8">
                    {% if association.missions %}
                    <div class="agent-information-area mb-80 wow fadeInUp" data-wow-delay="200ms">
                        <h4 class="mb-30">Missions </h4>
                        {% for mission in association.missions %}
                        <!-- Agent Information Info -->
                        <div class="agent-information-info d-flex align-items-center">
                            <!-- Agent Thumb -->
                            <div class="agent-thumb">
                                <img src="{{ asset('uploads/mission/images/'~mission.image) }}" alt="">
                            </div>
                            <!-- Agent Info -->
                            <div class="agent-info">
                                <h4>{{ mission.titleMission }}</h4>
                                <!-- Agent Contact -->
                                <div class="agent-contact d-flex justify-content-between">
                                    <p>Phone: <span>(12) 456-7890</span></p>
                                    <p>Email: <span>info.colorlib@gmail.com</span></p>
                                </div>
                                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Risus commodo viverra maecenas accumsan lacus vel facilisis. </p>
                                <a class="btn rehomes-btn mt-10" href="#">Rejoignez notre cause!</a>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    {% endif %}

                    <!-- Information Area -->
                    {% if association.memberships|length > 0 %}
                    <div class="information-area mb-80 wow fadeInUp" data-wow-delay="200ms">
                        <h4 class="mb-30">Equipe:</h4>

                        <!--Information Content -->
                        <div class="information-content">
                            <ul class="d-flex flex-wrap">
                                {% for membership in association.memberships %}
                                    <div class="agent-information-info d-flex align-items-center">
                                        <!-- Agent Thumb -->
                                        <div class="agent-thumb">
                                            <img src="{{ asset('uploads/user/images/'~membership.user.image) }}" alt="">
                                        </div>
                                        <!-- Agent Info -->
                                        <div class="agent-info">
                                            <h4>{{ membership.user.nom|capitalize }} {{ membership.user.prenom|capitalize }}</h4>
                                            <!-- Agent Contact -->
                                            <div class="agent-contact d-flex justify-content-between">
                                                {% if membership.user.telephone %}
                                                <p>Telephone: <span>{{ membership.user.telephone }}</span></p>
                                                {% endif %}
                                                <p>Email: <span>{{ membership.user.email }}</span></p>
                                            </div>
                                            <h6>{{ membership.fonction }}</h6>
                                            <p>{{ membership.description }} </p>
                                        </div>
                                    </div>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                    {% endif %}




                </div>

                <!-- Sidebar Area -->
                <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                    <div class="rehomes-property-sidebar-area" data-wow-delay="200ms">
                        <h4 class="mb-30">Near By Place</h4>
                        <!-- Location Maps -->
                        <div class="loction-map">
                            <div id="map" style="width: 250px; height: 300px; background-color: red"></div>
                            <input type="hidden" name="lat_association" id="lat_association" value="{{association.latitude }}" />
                            <input type="hidden" name="lng_association" id="lng_association" value="{{association.longitude }}" />
                            </label>
                        </div>
                    </div>
                    {% if association.missions %}
                    <div class="rehomes-property-sidebar-area">
                        <!-- Single Properties Widget Area -->
                        <div class="properties-single-widget-area mb-80 wow fadeInUp" data-wow-delay="200ms">
                            <h4 class="widget-title mb-30">Missions recents:</h4>
                            {% for mission in association.missions %}
                            <!-- Single Recent Post -->
                            <div class="single-recent-post d-flex align-items-center">
                                <!-- Thumb -->
                                <div class="properties-post-thumb">
                                    <a href="properties-details.html"><img src="img/bg-img/45.jpg" alt=""></a>
                                </div>
                                <!-- Post Content -->
                                <div class="post-content">
                                    <a href="properties-details.html" class="post-title">Kennedy Suite</a>
                                    <p class="properties--location"><i class="fa fa-map-marker" aria-hidden="true"></i> GA 125, Newyork</p>
                                    <p class="properties--rent">Rent: <span>$7.770.000</span></p>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                        <!-- Search Location Area -->
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>

        function initMap() {
            var myLatLng = {lat: {{association.latitude}}, lng: {{association.longitude}}};

            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 10,
                center: myLatLng
            });

            var marker = new google.maps.Marker({
                position: myLatLng,
                map: map,
                title: '{{association.ville}}'
            });




        }
    </script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD00UW-yFHi17pDyHLe19_ImRpo0ja5Q3k&callback=initMap">
    </script>

{% endblock %}
