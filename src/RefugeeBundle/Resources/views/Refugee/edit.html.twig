{% extends 'baseback.html.twig' %}

{% block body %}
    <div class="container my-3">
        <h1>Modification d'un refugee</h1>
        <div class="row">
            <div class="col-sm-12 col-lg-6">
                {{ form_start(edit_form) }}
                <div class="form-group">
                    {{ form_label(edit_form.nativeCountry, 'Pays d\'origine') }}
                    {{ form_widget(edit_form.nativeCountry, {'attr': { 'class' : 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(edit_form.caseDescription, 'Description du cas') }}
                    {{ form_widget(edit_form.caseDescription, {'attr': { 'class' : 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(edit_form.arrivalDate, 'Date d\'arrivee') }}
                    {{ form_widget(edit_form.arrivalDate, {'attr': { 'class' : 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(edit_form.passportNumber, 'Numero du Passport') }}
                    {{ form_widget(edit_form.passportNumber, {'attr': { 'class' : 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(edit_form.civilStatus, 'Etat Civil') }}
                    {{ form_widget(edit_form.civilStatus, {'attr': { 'class' : 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(edit_form.childrenNumber, 'Nombre des enfants') }}
                    {{ form_widget(edit_form.childrenNumber, {'attr': { 'class' : 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(edit_form.user, 'Utilisateur') }}
                    {{ form_widget(edit_form.user, {'attr': { 'class' : 'form-control'}}) }}
                </div>
                <button type="submit" class="btn btn-primary">Cr√©er</button>
                {{ form_end(edit_form) }}
            </div>
        </div>
        <ul>
            <li>
                <a href="{{ path('refugee_index') }}">Retournez au list des refugees</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                    <input type="submit" class="btn btn-danger" value="Supprimer">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
