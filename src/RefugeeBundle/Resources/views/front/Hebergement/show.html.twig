{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Hebergement</h1>

        <table class="table table-striped">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ hebergement.id }}</td>
            </tr>
            <tr>
                <th>Governorat</th>
                <td>{{ hebergement.governorat }}</td>
            </tr>
            <tr>
                <th>Nombre des chambres</th>
                <td>{{ hebergement.nbrRooms }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ hebergement.duration }}</td>
            </tr>
            <tr>
                <th>Date du cr√©ation</th>
                <td>{% if hebergement.creationDate %}{{ hebergement.creationDate|date('d-m-Y') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ hebergement.state }}</td>
            </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('hebergement_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('hebergement_edit', { 'id': hebergement.id }) }}">Edit</a>
            </li>
            {{ form_start(delete_form) }}
            <button type="submit" class="btn btn-danger">Supprimer</button>
            {{ form_end(delete_form) }}
        </ul>
    </div>


{% endblock %}
