{% extends "::base.html.twig" %}

{% block title %}Log In{% endblock %}
{% block bread %}Log In{% endblock %}

{% block fos_user_content %}
<section class="rehomes-choose-us-area section-padding-100-60">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-heading text-center wow fadeInUp" data-wow-delay="200ms">
                    <h2>Parceque <span>Vous </span>faites la différence.</h2>
                    <p>{% block identity %} {% endblock %}</p>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="section">


    <div class="auth-wrapper d-flex no-block justify-content-center align-items-center position-relative"
         style="background:url({{asset('/assets/back/images/big/5.jpg')}}) no-repeat center center;">
        <div class="auth-box row">
            <div class="col-lg-7 col-md-5 modal-bg-img" style="background-image: url({{ asset('/assets/back/images/big/3.jpg') }});">
            </div>
            <div class="col-lg-5 col-md-7 bg-white">
                <div class="p-3">
                    <div class="text-center">
                        <img src="{{ asset('/assets/back/images/big/icon.png') }}" alt="wrapkit">
                    </div>
                    <h2 class="mt-3 text-center">S'authentifier</h2>
                    <p class="text-center">Acceder a votre premiere plateforme de bénévolat en Tunisie.</p>
                    {% trans_default_domain 'FOSUserBundle' %}
                    <form class="mt-4" action="{{ path("fos_user_security_check") }}" method="post">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label class="text-dark" for="uname">Username</label>
                                    <input class="form-control"
                                           placeholder="Votre idantifiant" type="text" id="username" name="_username" value="{{ last_username }}" required="required">
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label class="text-dark" for="pwd">Mot de passe</label>
                                    <input class="form-control" id="pwd" type="password"
                                           placeholder="Votre mot de passe" name="_password" required="required">
                                    {% if csrf_token %}
                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                    {% endif %}
                                </div>
                            </div>
                            <div class="col-lg-12 text-center">
                                <button type="submit" class="btn btn-block btn-dark" id="_submit" name="_submit">Se connecter</button>
                                <label for="rememberme" class="rememberme">
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> Remember Me</label>
                            </div>
                            {% if error %}
                                <div style="color:red">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            <div class="col-lg-12 text-center mt-5">
                                Vous n'avez pas de compte ? <a href="{{ path('fos_user_registration_register') }}" class="text-danger">Inscriver-vous</a>
                                <br>
                                <a href="{{path('admin_association_register')}}" class="text-danger">Inscriver votre association</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- Login box.scss -->
    <!-- ============================================================== -->
    </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


{% endblock fos_user_content %}
