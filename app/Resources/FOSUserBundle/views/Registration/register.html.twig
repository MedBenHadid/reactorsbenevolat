{% extends "::base.html.twig" %}

{% block title %}Register{% endblock %}
{% block bread %}Register{% endblock %}

{% block fos_user_content %}
    <div class="col-lg-12 col-md-12 bg-black">
        <div class="p-3">
            <h2 class="mt-3 text-center">Sign Up for Free</h2>
            <form class="mt-4">
                <div class="row">
                    {% trans_default_domain 'FOSUserBundle' %}
                    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'register'}}) }}
                    <div class="col-lg-12">
                        <div class="form-group">
                            <div class="form-control-lg">
                            <label for="cin">CIN:
                                <i class="im im-icon-Male"></i>
                                {{ form_widget(form.id, {'attr': {'id':'cin'}}) }}
                            </div>
                            </label>
                        </div>
                    </div>
                    {{ dump(app.user.notifications) }}
                    <div class="col-lg-12">
                        <div class="form-group">
                            <input class="form-control" type="email" placeholder="email address">
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <input class="form-control" type="password" placeholder="password">
                        </div>
                    </div>
                    <div class="col-lg-12 text-center">
                        <input type="submit" class="button border fw margin-top-10" name="register" value="S'inscrire" />
                    </div>
                    <div class="col-lg-12 text-center mt-5">
                        Vous avez un compte d√©ja? <a href="#" class="text-danger">S'authentifier</a>
                    </div>
                    {{ form_end(form) }}
                </div>
            </form>
        </div>
    </div>
