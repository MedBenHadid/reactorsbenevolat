{% extends 'base.html.twig' %}

{% block body %}
    <h1>Hebergement</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ hebergement.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ hebergement.description }}</td>
            </tr>
            <tr>
                <th>Governorat</th>
                <td>{{ hebergement.governorat }}</td>
            </tr>
            <tr>
                <th>Nbrrooms</th>
                <td>{{ hebergement.nbrRooms }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ hebergement.duration }}</td>
            </tr>
            <tr>
                <th>Creationdate</th>
                <td>{% if hebergement.creationDate %}{{ hebergement.creationDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ hebergement.state }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('hebergement_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('hebergement_edit', { 'id': hebergement.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
