{% extends 'base.html.twig' %}

{% block body %}
    <h1>Thread</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ thread.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ thread.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ thread.content }}</td>
            </tr>
            <tr>
                <th>Lastmodified</th>
                <td>{% if thread.lastmodified %}{{ thread.lastmodified|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('threads_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('threads_edit', { 'id': thread.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
