{% extends 'base.html.twig' %}

{% block body %}
    <h1>Imagedons list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for imageDon in imageDons %}
            <tr>
                <td><a href="{{ path('imagedon_show', { 'id': imageDon.id }) }}">{{ imageDon.id }}</a></td>
                <td>{{ imageDon.image }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('imagedon_show', { 'id': imageDon.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('imagedon_edit', { 'id': imageDon.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('imagedon_new') }}">Create a new imageDon</a>
        </li>
    </ul>
{% endblock %}
