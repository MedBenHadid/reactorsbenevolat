{% extends 'baseback.html.twig' %}

{% block body %}
<div class="container my-3">
    <h1>Don creation</h1>
<div class="row">
    <div class="col-sm-12 col-lg-6">
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.title ,'titre de donnation') }}
            {{ form_widget(form.title ,{'attr': { 'class' : 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.description ,'description') }}
            {{ form_widget(form.description ,{'attr': { 'class' : 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.creationDate ,'Date de creation') }}
            {{ form_widget(form.creationDate ,{'attr': { 'class' : 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.address ,'address') }}
            {{ form_widget(form.address ,{'attr': { 'class' : 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.category ,'categorie de donnation') }}
            {{ form_widget(form.category ,{'attr': { 'class' : 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.state ,'etat de donnation') }}
