    <script>
        function onchangeImgAg(){
            input = document.getElementById('photo_association');
            file = input.files[0];
            console.log(file);

            fr = new FileReader();
            fr.onload = showImage;
            //fr.readAsText(file);
            fr.readAsDataURL(file);

